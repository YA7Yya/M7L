<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Barcode Scanner with Flash</title>
  <script src="https://cdn.jsdelivr.net/npm/quagga/dist/quagga.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      text-align: center;
    }

    h1 {
      color: #333;
      font-size: 2em;
      margin-bottom: 20px;
      font-weight: 600;
    }

    #scanner-container {
      width: 100%;
      max-width: 600px;
      height: 400px;
      border: 2px solid #007BFF;
      border-radius: 10px;
      background-color: #fff;
      position: relative;
      overflow: hidden;
    }

    #scanner-container video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    #barcode-result {
      font-size: 1.5em;
      font-weight: bold;
      color: #007BFF;
      padding: 10px;
      display: block;
      margin-top: 20px;
      border: 2px solid #007BFF;
      border-radius: 5px;
      background-color: #e7f3ff;
    }

    button {
      padding: 10px 20px;
      font-size: 1em;
      color: #fff;
      background-color: #007BFF;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 10px;
    }

    button:hover {
      background-color: #0056b3;
    }

    @media (max-width: 768px) {
      #scanner-container {
        height: 300px;
      }

      h1 {
        font-size: 1.5em;
      }

      #barcode-result {
        font-size: 1.2em;
      }
    }
  </style>
</head>
<body>

  <div>
    <h1>Barcode Scanner with Flash</h1>
    <div id="scanner-container"></div>
    <p>Scanned Barcode: <span id="barcode-result">None</span></p>
    <button onclick="toggleFlash()">Toggle Flash</button>
    <button onclick="window.location.reload()">Restart Scanner</button>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const resultSpan = document.getElementById("barcode-result");
      let firstScan = true;
      let videoTrack = null;
      let flashEnabled = true

      // Initialize Quagga
      Quagga.init({
        inputStream: {
          type: "LiveStream",
          target: document.querySelector("#scanner-container"),
        },
        decoder: {
          readers: ["code_128_reader", "ean_reader", "ean_8_reader", "upc_reader"],
        },
      }, (err) => {
        if (err) {
          console.error(err);
          return;
        }
        Quagga.start();

        // Access the video track for flash control
        Quagga.CameraAccess.request(null).then(stream => {
          videoTrack = stream.getVideoTracks()[0];
          const capabilities = videoTrack.getCapabilities();
          if (!capabilities || !capabilities.torch) {
            alert("Flash is not supported on this device or browser.");
          }
        }).catch(err => {
          console.error("Error accessing camera:", err);
        });
      });
      // Handle detected barcodes
      const audio = new Audio('../scanner.mp3'); // Replace with your sound file path


      Quagga.onDetected((data) => {
        if (firstScan) {
       
          resultSpan.textContent = data.codeResult.code;
          audio.play();
          console.log("First barcode detected:", data);
          firstScan = false;
        }
      });

      // Toggle flash function
      window.toggleFlash = () => {
        if (videoTrack && videoTrack.getCapabilities().torch) {
          flashEnabled = !flashEnabled;
          videoTrack.applyConstraints({
            advanced: [{ torch: flashEnabled }]
          }).catch(err => console.error("Error toggling flash:", err));
        } else {
          alert("Flash is not supported on this device or browser.");
        }
      };
    });
  </script>
</body>
</html>
