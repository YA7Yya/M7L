<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ZXing Barcode Scanner</title>
</head>
<body>
  <h1>Scan Barcode</h1>
  <video id="video" width="400" height="300" style="border:1px solid black;"></video>
  <p>Scanned Result: <span id="result"></span></p>

  <script type="module">
  import { BrowserMultiFormatReader } from 'https://cdn.jsdelivr.net/npm/@zxing/browser@0.1.1/+esm';

const codeReader = new BrowserMultiFormatReader();
const videoElement = document.getElementById('video');
const resultElement = document.getElementById('result');

async function startScanner() {
  try {
    // Get all video input devices (cameras)
    const devices = await BrowserMultiFormatReader.listVideoInputDevices();

    if (devices.length === 0) {
      throw new Error('No camera devices found');
    }

    // Try to find the back/rear camera
    const backCam = devices.find(device =>
      device.label.toLowerCase().includes('back') ||
      device.label.toLowerCase().includes('rear')
    );

    const selectedDeviceId = backCam?.deviceId || devices[0].deviceId;

    // Start scanning using the selected device
    codeReader.decodeFromVideoDevice(selectedDeviceId, videoElement, (result, err) => {
      if (result) {
        resultElement.textContent = result.getText();
      }
    });

  } catch (error) {
    console.error('Camera access error:', error);
    resultElement.textContent = '‚ùå Failed to access camera';
  }
}

startScanner();



  </script>
</body>
</html>
