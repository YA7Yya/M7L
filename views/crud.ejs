  <body>
<form action="/productAdd" method="post">
  <div class="w-75 m-auto shadow-lg p-5 my-5 bg-light">
    <h1 class="fw-bolder text-uppercase text-center mb-4">Crud system</h1>
    <label for="pname" class="mt-3">اسم المنتج :</label>
    <input type="text" class="form-control" id="pname" name="PNAME"/>
    <!-- <label for="pcategory" class="mt-3">Product Category:</label>
    <input type="text" class="form-control" id="pcategory" /> -->
    <label for="price" class="mt-3">سعر الجملة :</label>
    <input type="text" class="form-control" id="price" name="WHOLEPRICE"/>
    <label class="mt-3">ملاحظات المنتج :</label>
    <textarea id="notes" class="form-control" name="PNOTES"> </textarea>
    <input type="submit" class="btn btn-primary w-100 d-block mt-3" id="addBtn" value="إضافة المنتج">
  


  </div>

</form>

    <!-- <input
      placeholder="Search by Product Name..."
      class="form-control w-50 m-auto"
      id="searchInput"
    /> -->

    <div>
      <table class="table w-75 m-auto my-4 bg-light">
        <thead>
          <tr>
            <th>اسم المنتج</th>
            <th>سعر الجملة</th>
            <th>السعر</th>
            <th>الربح</th>
            <th>الملاحظات</th>
            <th>تحديث</th>
            <th>حذف</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          <% allProducts.forEach(product => { %> 
            <%let price = product.WHOLEPRICE * 1.25 %>
            <tr class="">
              <td><%= product.PNAME%></td>
              <td><%= product.WHOLEPRICE%></td>
              <td><%= price %> </td>
              <td><%= price - product.WHOLEPRICE  %></td>
              <td><%= product.PNOTES%></td>
              <td><button class="btn btn-outline-warning"><i class="fa-solid fa-edit"></i></button></td>
              <td><button class="btn btn-outline-danger delete"data-idlink="<%= product._id %> "><i class="fa-solid fa-trash"></i></button></td>
            </tr>
            <% }); %> 
        </tbody>
      </table>
    </div>
    <script src="../js/Delete.js"></script>
  </body>
</html>