<body>
    <div class="container">
        <header class="text-center">
            <h1>إدارة المخزن</h1>
        </header>
        <section class="add-item">
<center>
    <h2>إضافة منتج للمخزن</h2>
</center>
            <form id="addItemForm" action="/storage" method="post">
                <input type="text" id="itemName" name="productName" class="form-control" placeholder="اسم المنتج" required>
                <input type="number" name="quantity" id="itemQuantity" class="form-control" placeholder="الكمية" required>
                <input type="number" name="wholePrice" class="form-control" placeholder="سعر الجملة للوحدة" required>
                <select name="unit" class="form-select" required>
                    <option value="الوحدة" disabled selected>الوحدة</option>
                    <option value="دستة">دستة</option>
                    <option value="1/2 دستة">1/2 دستة</option>
                    <option value="قطعة">قطعة</option>
                    <option value="كرتونة">كرتونة</option>
                    <option value="طقم">طقم</option>
                </select>
                <select name="status" class="form-select" required>
                    <option value="حالة المتج" disabled selected >حالة المنتج</option>
                   <option value="متوفر 🟢">متوفر 🟢</option>
                   <option value="غير متوفر 🔴">غير متوفر 🔴</option>
                </select>
                <button type="submit" class="btn btn-primary w-100">إضافة المنتج</button>
            </form>
        </section>
        <section class="storage-list mt-5">
            <h2 class="text-center">المخزن</h2>
            <table class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>الصنف</th>
                        <th>الكمية/الوحدة</th>
                        <th>سعر الجملة للوحدة</th>
                        <th>حالة الصنف</th>
                        <th>نشاط</th>
                    </tr>
                </thead>
                <tbody>
                    <% product.forEach(product =>{ %> 
                        <tr>
                        <td><%= product.productName %> </td>
                        <td><%= product.quantity%> / <%= product.unit %>  </td>
                        <td><%= product.wholePrice %> </td>
                        <td><%= product.status %> </td>
                        <td>
                            <button class="btn btn-outline-danger delete" data-productId="<%= product._id %>">
                                <i class="fa fa-trash delete"></i>
                              </button>
                        </td>
                    </tr>
                        <% }) %> 
               
                </tbody>
            </table>
        </section>
    </div>
